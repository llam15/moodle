{{!
    @template course/modchooser_item

    Modchooser item.

    Example context (json):
    {
        "id": "1",
        "paramname": "param",
        "value": "1",
        "label": "item one",
        "description": "description one",
        "pinned": "pinned"
    }
}}
<div class="option {{pinned}} tool" {{^pinned}}hidden="hidden"{{/pinned}}>
    <label for="item_{{id}}">
        <input type="radio" name="{{paramname}}" id="item_{{id}}" value="{{value}}">
        <span class="modicon">
            {{#icon}}
                {{>core/pix_icon}}
            {{/icon}}
        </span>
        <span class="typename">
            {{label}}
            {{#pinned}}
                <span class="star" hidden="hidden">{{#pix}} i/star, core, {{#str}}removetool{{/str}} {{/pix}}</span>
            {{/pinned}}
            {{^pinned}}
                <span class="star_empty" hidden="hidden">{{#pix}} i/star_empty, core, {{#str}}addtool{{/str}} {{/pix}}</span>
            {{/pinned}}
        </span>
        <span class="typesummary">
            {{{description}}}
        </span>
    </label>
</div>
